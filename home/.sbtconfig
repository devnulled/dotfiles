SBT_NORMAL_OPTS="-XX:+CMSClassUnloadingEnabled -XX:ReservedCodeCacheSize=512M -XX:MaxPermSize=2024M -Xmx4680M -Xms1024M -d64"
SBT_DEBUG_OPTS="$SBT_NORMAL_OPTS agentlib:jdwp=transport=dt_socket,server=y,suspend=y,address=5004"
SBT_OPTS=$SBT_NORMAL_OPTS

alias sbt-debug="export SBT_OPTS=$SBT_DEBUG_OPTS ; sbt -jvm-agentlib:jdwp=transport=dt_socket,server=y,suspend=y,address=5004"
alias sbt-reset="export SBT_OPTS=$SBT_NORMAL_OPTS"